<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <!-- Tier 1 Implants -->
  <ResearchProjectDef>
    <defName>AI_SteelOrganCasings</defName>
    <label>steel organ casings</label>
    <description>Build inexpensive organ casings.  Requires a skilled doctor to attach</description>
    <researchViewX>7</researchViewX>
    <researchViewY>5.8</researchViewY>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>

    <prerequisites>
      <li>Prosthetics</li>
    </prerequisites>
  </ResearchProjectDef>
  
  <!-- Tier 2 Implants -->
  <ResearchProjectDef>
    <defName>AI_PlasteelOrganCasings</defName>
    <label>plasteel organ casings</label>
    <description>Build more advanced organ casings.  Requires a very skilled doctor to attach.</description>
    <researchViewX>14</researchViewX>
    <researchViewY>4.9</researchViewY>
    <baseCost>1000</baseCost>
    <techLevel>Industrial</techLevel>

    <prerequisites>
      <li>AdvancedFabrication</li>
      <li>AI_SteelOrganCasings</li>
    </prerequisites>
  </ResearchProjectDef>
  
  <!-- Bionic Parts -->
  <ResearchProjectDef>
    <defName>AI_ReinforcedBionics</defName>
    <label>reinforced bionics</label>
    <description>Build reinforced bionic prosthetics.  Requires a highly skilled doctor to attach.</description>
    <researchViewX>15</researchViewX>
    <researchViewY>5.9</researchViewY>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <baseCost>5000</baseCost>
    <techLevel>Spacer</techLevel>

    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
    </requiredResearchFacilities>

    <prerequisites>
      <li>Bionics</li>
      <li>AI_PlasteelOrganCasings</li>
    </prerequisites>
  </ResearchProjectDef>
</Defs>